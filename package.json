{
  "name": "astro-microsite-boilerplate",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && npm run fix:vercel-runtime",
    "fix:vercel-runtime": "node -e \"const fs=require('fs');const path='.vercel/output/functions/_render.func/.vc-config.json';if(fs.existsSync(path)){const config=JSON.parse(fs.readFileSync(path));config.runtime='nodejs20.x';fs.writeFileSync(path,JSON.stringify(config,null,2));}\"",
    "preview": "astro preview",
    "astro": "astro",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "test:email": "tsx src/lib/db/test-email.ts",
    "test:invitee-email": "tsx src/lib/db/test-invitee-email.ts",
    "diagnose:email": "tsx src/lib/db/diagnose-email.ts",
    "check:email-status": "tsx src/lib/db/check-email-status.ts"
  },
  "dependencies": {
    "@astrojs/vercel": "^7.8.2",
    "@neondatabase/serverless": "^1.0.0",
    "astro": "^4.15.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.45.0",
    "nanoid": "^5.0.7",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.0",
    "dotenv": "^17.2.3",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  }
}
