---
import Layout from '../layouts/Layout.astro';

const title = 'ANTA BEVERLY HILLS FIRST ACCESS';
---

<Layout title={title}>
  <div class="min-h-screen relative overflow-hidden">
    <!-- Background image overlay -->
    <div 
      class="fixed inset-0 z-0 bg-cover bg-center"
      style="background-image: url('/Anta-Store-Background.jpg'); background-attachment: fixed;"
    >
      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 bg-black opacity-80"></div>
    </div>

    <!-- Main content -->
    <div class="relative z-10 min-h-screen flex flex-col">
      <!-- Hero Section -->
      <section class="flex-1 flex flex-col justify-center items-center px-6 lg:pt-[60px] lg:pb-[40px]">
        <div class="px-[20px] w-full text-center space-y-8">
          <!-- Top label -->
          <p class="w-full mb-[60px] text-center text-white text-[18px] font-sharp-grotesk font-normal uppercase tracking-[23.40px] break-words">
            THE NEW ANTA BEVERLY HILLS FLAGSHIP
          </p>

          <!-- ANTA Logo Area -->
          <div class="flex flex-col items-center space-y-4">
            <svg width="191" height="103" viewBox="0 0 191 103" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M29.9023 102.999H20.5L20.9316 97.1352H12.1104L9.25293 102.999H0L22.3936 59.2602H31.7637L29.9023 102.999ZM54.7881 82.683L61.3174 59.2436H70.8193L58.626 102.999H49.3564L46.1494 81.2377L40.0859 102.999H30.8164L43.043 59.2436H51.3164L54.7881 82.683ZM96.7686 68.6293H88.4121L78.8105 102.998H69.5732L79.1416 68.6293H70.3379L72.9619 59.2436H99.4092L96.7686 68.6293ZM111.105 102.998H101.736L102.151 97.1352H93.3633L90.4727 102.998H81.1855L103.63 59.2602H112.966L111.105 102.998ZM71.7998 0.000427246C100.123 -0.0535211 128.215 5.0919 154.68 15.1821L167.007 25.6479C149.091 20.9293 130.702 18.2321 112.186 17.6078C143.23 28.8505 170.164 49.1648 189.499 75.8969L190.414 77.1752L171.625 102.989C134.09 50.7346 73.6621 19.7817 9.32031 19.851C6.64574 19.851 2.65785 20.017 0 20.017L20.9814 5.58148C37.6621 1.84454 54.7057 -0.0272157 71.7998 0.000427246ZM16.0312 88.0483H21.4971L23.1582 72.6L16.0312 88.0483ZM97.25 88.0483H102.716L104.377 72.5991L97.25 88.0483Z" fill="white"/>
            </svg>
          </div>
          
          <!-- Main Heading -->
          <h2 class="font-sharp-grotesk text-white text-4xl lg:text-6xl font-medium tracking-tight">
            ANTA BEVERLY HILLS
          </h2>

          <!-- Subheading -->
          <h3 class="font-sharp-grotesk text-white text-3xl lg:text-5xl font-light tracking-tight">
            FIRST ACCESS
          </h3>

          <!-- Call to Action Text -->
          <div class="space-y-4 pt-8">
            <p class="font-sharp-grotesk text-white text-lg lg:text-xl leading-relaxed max-w-2xl mx-auto font-light">
              JOIN US FOR FIRST ACCESS TO THE NEW
              <br><strong class="font-semibold">ANTA BEVERLY HILLS FLAGSHIP</strong>.
            </p>
            <p class="font-sharp-grotesk text-white text-base lg:text-lg leading-relaxed max-w-2xl mx-auto opacity-90">
              Experience the space before it opens and be among the first to see the Chinese New Year KAI 3 CNY.
            </p>
          </div>

          <!-- Date/Time Card -->
          <div class="pt-8 flex justify-center px-4">
            <div class="w-full max-w-[900px] py-5 bg-[rgba(255,255,255,0.10)] rounded-[4px] outline outline-2 outline-[rgba(255,255,255,0.50)] outline-offset-[-2px] inline-flex flex-col md:flex-row justify-center items-center md:items-start gap-4 md:gap-0">
              <div class="w-full md:w-[364px] h-auto md:h-[77px] flex justify-center items-center gap-2.5">
                <div class="w-full md:w-[460px] text-center flex flex-col justify-center text-white text-2xl md:text-[36px] font-sharp-grotesk font-semibold uppercase leading-[20px] tracking-[1.08px] break-words">
                  FRI 1.17.26
                </div>
              </div>
              <div class="w-full md:w-[420px] h-auto md:h-[77px] flex justify-center items-center gap-2.5">
                <div class="text-center flex flex-col justify-center text-white text-2xl md:text-[36px] font-sharp-grotesk font-semibold uppercase leading-[20px] tracking-[1.08px] break-words">
                  10 AM â€“ 2 PM
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- RSVP Form Section -->
      <section class="relative z-10 px-6 py-12 lg:py-[40px]">
        <div class="max-w-2xl mx-auto">
          <p id="rsvp-instructions" class="w-full text-center flex flex-col justify-center text-white text-[24px] font-sharp-grotesk font-medium leading-[40px] break-words mb-8">
            Please complete the form below to request first access.
          </p>
          
          <form id="registration-form" class="space-y-6" method="POST">
            <div class="flex flex-col gap-2">
              <label for="firstName" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                First Name <span class="text-red-600">*</span>
              </label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required
                autocomplete="given-name"
                placeholder="Your first name"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>
            
            <div class="flex flex-col gap-2">
              <label for="lastName" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                Last Name <span class="text-red-600">*</span>
              </label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required
                autocomplete="family-name"
                placeholder="Your last name"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>
            
            <div class="flex flex-col gap-2">
              <label for="email" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                Email Address <span class="text-red-600">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                autocomplete="email"
                placeholder="your.email@example.com"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>
            
            <div class="flex flex-col gap-2">
              <label for="phone" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                autocomplete="tel"
                placeholder="(555) 123-4567"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>
            
            <div class="flex flex-col gap-2">
              <label for="shirtSize" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                Shirt Size
              </label>
              <select 
                id="shirtSize" 
                name="shirtSize"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base bg-white focus:outline-none focus:border-gray-900 transition-colors cursor-pointer"
              >
                <option value="">Select size</option>
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
                <option value="XXL">XXL</option>
              </select>
            </div>
            
            <div class="flex flex-col gap-2">
              <label for="sneakerSize" class="font-sharp-grotesk font-semibold text-gray-700 text-sm">
                Sneaker Size
              </label>
              <select 
                id="sneakerSize" 
                name="sneakerSize"
                class="font-sharp-grotesk px-4 py-3 border-2 border-gray-300 rounded-lg text-base bg-white focus:outline-none focus:border-gray-900 transition-colors cursor-pointer"
              >
                <option value="">Select size</option>
                <option value="5">5</option>
                <option value="5.5">5.5</option>
                <option value="6">6</option>
                <option value="6.5">6.5</option>
                <option value="7">7</option>
                <option value="7.5">7.5</option>
                <option value="8">8</option>
                <option value="8.5">8.5</option>
                <option value="9">9</option>
                <option value="9.5">9.5</option>
                <option value="10">10</option>
                <option value="10.5">10.5</option>
                <option value="11">11</option>
                <option value="11.5">11.5</option>
                <option value="12">12</option>
                <option value="12.5">12.5</option>
                <option value="13">13</option>
              </select>
            </div>

            <!-- Submit Button / Inline Confirmation Area -->
            <div id="registration-action" class="text-center pt-6" aria-live="polite">
              <button
                id="register-button"
                type="submit"
                class="font-sharp-grotesk bg-[#0a1a2e] text-white px-12 py-4 rounded-lg text-lg font-semibold uppercase tracking-wide hover:bg-[#1a2e3d] transition-colors disabled:opacity-60 disabled:cursor-not-allowed"
              >
                RSVP Now
              </button>
            </div>

            <!-- Inline error box (hidden by default) -->
            <div
              id="registration-error"
              class="hidden mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg text-lg text-center"
              aria-live="polite"
            ></div>
          </form>
          
          <!-- Success message container (hidden by default) -->
          <div
            id="registration-success"
            class="hidden"
            aria-live="polite"
          ></div>
        </div>
      </section>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('registration-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    const actionContainer = document.getElementById('registration-action');
    const errorContainer = document.getElementById('registration-error');
    const successContainer = document.getElementById('registration-success');
    const registerButton = document.getElementById('register-button') as HTMLButtonElement;

    // Clear previous error
    if (errorContainer) {
      errorContainer.textContent = '';
      errorContainer.classList.add('hidden');
    }

    // Loading state
    let originalButtonHTML: string | null = null;
    if (registerButton) {
      originalButtonHTML = registerButton.innerHTML;
      registerButton.disabled = true;
      registerButton.classList.add('opacity-60', 'cursor-not-allowed');
      registerButton.setAttribute('aria-busy', 'true');
      registerButton.innerHTML = `
        <span class="inline-flex items-center gap-3">
          <svg class="animate-spin h-6 w-6 text-white" viewBox="0 0 24 24" fill="none">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
          </svg>
          Submitting...
        </span>
      `;
    }

    try {
      const response = await fetch('/api/signup', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        // Hide the heading, instructions, and form
        const rsvpHeading = document.getElementById('rsvp-heading');
        const rsvpInstructions = document.getElementById('rsvp-instructions');
        
        if (rsvpHeading) rsvpHeading.style.display = 'none';
        if (rsvpInstructions) rsvpInstructions.style.display = 'none';
        form.style.display = 'none';
        
        // Show success message
        if (successContainer) {
          successContainer.classList.remove('hidden');
          successContainer.innerHTML = `
            <div class="p-6 bg-green-100 border border-green-400 text-green-700 rounded-lg text-xl font-semibold text-center">
              Thank you for signing up for ANTA First Access.<br>Confirmed guests will receive additional event details prior to January 17.
            </div>
          `;
        }
        form.reset();
      } else {
        const errorData = await response.json().catch(() => ({}));
        console.error('Server error:', errorData);
        // Display error message - show details in development
        let errorMessage = 'Something went wrong. Please try again.';
        if (errorData.details) {
          errorMessage = errorData.details;
        } else if (errorData.error) {
          errorMessage = errorData.error;
        }
        
        // Log full error for debugging
        if (errorData.stack) {
          console.error('Error stack:', errorData.stack);
        }
        
        if (errorContainer) {
          errorContainer.textContent = errorMessage;
          errorContainer.classList.remove('hidden');
        }
        if (registerButton && originalButtonHTML !== null) {
          registerButton.disabled = false;
          registerButton.classList.remove('opacity-60', 'cursor-not-allowed');
          registerButton.removeAttribute('aria-busy');
          registerButton.innerHTML = originalButtonHTML;
        }
      }
    } catch (error) {
      console.error('Form submission error:', error);
      if (errorContainer) {
        errorContainer.textContent = 'Something went wrong. Please try again.';
        errorContainer.classList.remove('hidden');
      }
      if (registerButton && originalButtonHTML !== null) {
        registerButton.disabled = false;
        registerButton.classList.remove('opacity-60', 'cursor-not-allowed');
        registerButton.removeAttribute('aria-busy');
        registerButton.innerHTML = originalButtonHTML;
      }
    }
  });
</script>
